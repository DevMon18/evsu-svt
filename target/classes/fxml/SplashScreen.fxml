<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="splashScreen" alignment="CENTER" spacing="20" styleClass="splash-screen"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.java.com.evsu.violation.controllers.SplashScreenController">
    
    <!-- Logo -->
    <ImageView fx:id="logoImage" fitHeight="150" fitWidth="150" preserveRatio="true">
        <Image url="@../images/evsu-logo.png"/>
    </ImageView>
    
    <!-- Title -->
    <VBox alignment="CENTER" spacing="5">
        <Label styleClass="splash-title" text="EASTERN VISAYAS STATE UNIVERSITY" />
        <Label styleClass="splash-title" text="ORMOC CAMPUS" />
        <Label styleClass="splash-subtitle" text="Student Violation Tracker" />
    </VBox>
    
    <!-- Loading Indicator -->
    <VBox alignment="CENTER" spacing="10">
        <ProgressIndicator fx:id="loadingIndicator" />
        <Label fx:id="loadingText" styleClass="loading-text" text="Loading..." />
    </VBox>
    
</VBox> 